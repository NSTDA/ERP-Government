<?xml version="1.0" encoding="utf-8" ?>
<odoo>
   <record id="account_asset_class_view_form" model="ir.ui.view">
        <field name="name">account.asset.class.form</field>
        <field name="model">account.asset.class</field>
        <field name="arch" type="xml">
            <form string="Asset Class">
                 <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="action_view_assets"
                            string="Assets"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-cube"
                        />
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" class="oe_inline" />
                        </h1>
                    </div>
                    <group>
                        <group name="group_left">
                            <field name="active" invisible="1" />
                            <field name="code" />
                            <field name="asset_profile_id" />
                        </group>
                        <group name="group_right">
                            <field
                                name="company_id"
                                widget="selection"
                                groups="base.group_multi_company"
                            />
                            <field name="note" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="account_asset_class_view_tree" model="ir.ui.view">
        <field name="name">account.asset.class.tree</field>
        <field name="model">account.asset.class</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" optional="show" />
                <field name="name" />
                <field name="asset_profile_id" />
                <field name="asset_ids" widget="many2many_tags" optional="hide" />
                <field
                    name="company_id"
                    groups="base.group_multi_company"
                    optional="show"
                />
            </tree>
        </field>
    </record>
    <record id="account_asset_class_view_search" model="ir.ui.view">
        <field name="name">account.asset.class.search</field>
        <field name="model">account.asset.class</field>
        <field name="arch" type="xml">
            <search string="Asset Class">
                <field name="name" string="Asset Class" />
                <separator />
                <filter
                    string="Archived"
                    name="inactive"
                    domain="[('active', '=', False)]"
                />
                <group name="groupby">
                    <filter
                        name="group_by_asset_profile"
                        string="Asset Profile"
                        context="{'group_by': 'asset_profile_id'}"
                    />
                    <filter
                        name="group_by_company"
                        string="Company"
                        context="{'group_by': 'company_id'}"
                        groups="base.group_multi_company"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="action_account_asset_class" model="ir.actions.act_window">
        <field name="name">Asset Class</field>
        <field name="res_model">account.asset.class</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        id="account_asset_class_menu"
        name="Asset Class"
        action="action_account_asset_class"
        parent="account_asset_management.menu_finance_config_assets"
    />
</odoo>
